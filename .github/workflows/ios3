name: iOS CI

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build-and-test:
    runs-on: macos-latest

    env:
      SCHEME: instagram-clone
      SDK: iphonesimulator
      DESTINATION: platform=iOS Simulator,name=iPhone 14

    steps:
      - name: âœ… Checkout code
        uses: actions/checkout@v4

      - name: ðŸ›  Set up Ruby for CocoaPods
        uses: ruby/setup-ruby@v1
        with:
          ruby-version: '3.1'

      - name: ðŸ“¦ Install xcpretty
        run: sudo gem install xcpretty

      - name: ðŸ“¦ Install xcodeproj gem (to downgrade project format)
        run: |
          gem install xcodeproj
          cd App
          ruby -e 'require "xcodeproj"; project = Xcodeproj::Project.open("instagram-clone.xcodeproj"); project.save_as("instagram-clone.xcodeproj")'

      - name: ðŸ“¦ Install CocoaPods dependencies (if Podfile exists)
        run: pod install
        if: ${{ hashFiles('Podfile') != '' }}

      - name: ðŸ§± Build the app
        run: |
          cd App
          xcodebuild \
            -scheme "$SCHEME" \
            -sdk "$SDK" \
            -destination "$DESTINATION" \
            -configuration Debug \
            clean build | xcpretty

      - name: ðŸ§ª Run tests
        run: |
          cd App
          xcodebuild \
            -scheme "$SCHEME" \
            -sdk "$SDK" \
            -destination "$DESTINATION" \
            test | xcpretty

      - name: ðŸ“¤ Upload test results (optional)
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: xcode-results
          path: '**/*.xcresult'
